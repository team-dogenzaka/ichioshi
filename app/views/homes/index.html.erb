  <div class="container">
    <h2 class="module-title font-alt">#プレゼントのTOPレビュアー</h2>
    <div class="row multi-columns-row slider slider_adjust ">
      <% @users.each do |user| %>
        <div class="col-md-3 col-sm-12 col-xs-12">
          <div class="waku">
            <div class="row">
              <div class="col-sm-4">
                <% if user.provider == "facebook" %>
                  <div class="features-icon"><% user.icon = user.icon.insert(4,"s") %><%= link_to image_tag(user.icon, :class => "img-circle", :alt => "", :size => '70x70'), user %></div>
