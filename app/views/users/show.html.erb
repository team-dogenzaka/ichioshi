<section class="module-medium" id="demos">
          <div class="container">
<h1>My page</h1>
            <div class="row">
              <div class="col-sm-8">
<div class="row multi-columns-row post-columns">  
<!-- パンくずリスト（うまく表示されないのでコメントアウト）
<% breadcrumb :user, @user %>
<% provide(:title, @user.name) %>
 -->

<ul class="users">
  <li><%= @user.name %></li>
  <li><%= @user.email %></li>
  
  <% if (@user.provider == "facebook") %>
    <% @user.icon = @user.icon.insert(4,"s") %>
    <%= image_tag @user.icon, :class => "img-circle", :alt => "Karan Singh Sisodia", :size => "100x100" %>
  <% elsif @user.avator %>
    <%= image_tag(@user.avator.to_s, :class => "img-circle", :alt => "Karan Singh Sisodia", :size => "100x100") %>   
  <% else %>
    <%= image_tag('/no_img.png', :class => "img-circle", :alt => "Karan Singh Sisodia", :size => "100x100") %>
  <% end %>
</ul>
<%= @user.profile  %>
<% if current_user && @user.id == current_user.id %>
<%= link_to 'ユーザーを編集する', edit_user_registration_path  %>
<%= link_to 'ユーザーを削除する', users_destroy_path(id: current_user.id), method: :delete %>
<% end %>
　　　<%= render 'follow_form' %>
　　　<%= render 'stats' %>

<ul class="nav nav-tabs">
  <li class="nav-item active">
    <a href="#tab1" class="nav-link" data-toggle="tab">投稿一覧</a>
  </li>
  <li class="nav-item">
    <a href="#tab2" class="nav-link" data-toggle="tab">お気に入り一覧</a>
  </li>
  <li class="nav-item">
    <a href="#tab3" class="nav-link" data-toggle="tab">フォローしている人の投稿一覧</a>
  </li>
</ul>
<div class="tab-content">
  <div id="tab1" class="tab-pane active">
                  <% @user.reviews.each do |review| %>
                  <div class="col-md-6 col-lg-6">
                    <div class="post">
                      <div class="post-thumbnail">
                        <%= image_tag(review.image.url, :class => "fit-img") if review.image.url %>
                      </div>
                      <div class="post-header font-alt">
                        <h2 class="post-title"><%= review.title %></h2>
                        <div class="post-meta">
                          By&nbsp;<a href="#">Mark Stone</a>&nbsp;| 23 November | 3 Comments
                        </div>
                      </div>
                      <div class="post-entry">
                        <p>A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart.</p>
                      </div>
                      <div class="post-more">
                        <%= link_to '詳細を確認する', review_path(review.id) %>
                        <%= link_to "編集する", edit_review_path(review.id) %>
                        <%= link_to 'ブログを削除する', review_path(review.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
                      </div>
                    </div>
                  </div>
                  <% end %>
                   </div>

  <div id="tab2" class="tab-pane">

                  <% @user.favorite_reviews.each do |review| %>
                  <div class="col-md-6 col-lg-6">
                    <div class="post">
                      <div class="post-thumbnail">
                        <%= image_tag(review.image.url, :class => "fit-img") if review.image.url %>
                      </div>
                      <div class="post-header font-alt">
                        <h2 class="post-title"><%= review.title %></h2>
                        <div class="post-meta">By&nbsp;<a href="#">Mark Stone</a>&nbsp;| 23 November | 3 Comments
                        </div>
                      </div>
                      <div class="post-entry">
                        <p>A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart.</p>
                      </div>
                      <div class="post-more">
                        <%= link_to '詳細を確認する', review_path(review.id) %>
                      </div>
                    </div>
                  </div>
                  <% end %>            
                  </div> 

  <div id="tab3" class="tab-pane">      
  
<% if current_user && @user.id == current_user.id %>
                  <% if @feed_items.any? %>
                      <%= render @feed_items %>
                  <% end %>
              <% else %>
              <% end %>
              </div>  
                </div> 
 </div>
 </div>
 </div>
        </section>