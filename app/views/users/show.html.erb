<% breadcrumb :user, @user %>
<% provide(:title, @user.name) %>
<h1>My page</h1>

<ul class="users">
  <li><%= @user.name %></li>
  <li><%= @user.email %></li>
  
  <% unless @user.icon.blank? %>
    <%= image_tag(@user.icon.url) %>   
  <% else %>
     <%= image_tag '/no_img.png' %>
  <% end %>
</ul>

<%= link_to 'ユーザーを削除する', users_destroy_path(id: current_user.id), method: :delete %>
